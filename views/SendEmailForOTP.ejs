<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 400px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-disabled {
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">Forgot Password</h2>
        <form id="forgotPasswordForm" action="/send-otp" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <button type="button" onclick="SendEmail()" id="sendOtpBtn" class="btn btn-primary btn-block">Send OTP</button>
            </div>
            <div id="otpContainer" class="form-group d-none">
                <label for="otp">OTP</label>
                <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter OTP">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">Submit</button>
            </div>
        </form>
    </div>

    <!-- Bootstrap and jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.8/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('sendOtpBtn').addEventListener('click', function() {
            // Show OTP input box
            document.getElementById('otpContainer').classList.remove('d-none');
            
            // Disable the button
            this.classList.add('btn-disabled');
            this.disabled = true;
            
            // Re-enable button after 2 minutes
            setTimeout(() => {
                this.disabled = false;
                this.classList.remove('btn-disabled');
            }, 120000); // 2 minutes
        });
    </script>
    <script src="./js/SendMailForotp.js"></script>
</body>
</html>
